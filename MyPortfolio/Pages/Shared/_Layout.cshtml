<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kelly Soberano</title>

    <!-- Global CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Page-specific CSS -->
    @RenderSection("Styles", required: false)
</head>

<body>
    <header class="main-header">
        <nav class="main-nav">
            <a asp-page="/Home/Home">Home</a>
            <a asp-page="/About/About">About</a>
            <a asp-page="/Project/Project">Projects</a>
            <a asp-page="/Experience/Experience">Experience</a>
            <a asp-page="/Contact/Contact">Contact</a>
        </nav>
    </header>

    <main class="horizontal-scroll">
        @RenderBody()
    </main>

    <script>
        // Optional: smooth scroll navigation
        document.querySelectorAll(".main-nav a").forEach(link => {
            link.addEventListener("click", e => {
                e.preventDefault();
                const href = link.getAttribute("href");
                const target = document.querySelector(href);
                if (target) {
                    target.scrollIntoView({ behavior: "smooth", inline: "start" });
                } else {
                    window.location.href = href;
                }
            });
        });
    </script>
</body>
</html>
